# Enable strict SSL
strict-ssl=true

# Set registry
registry=https://registry.npmjs.org/

# Set package-lock to false to avoid lockfile issues
package-lock=false

# Increase network timeout to 10 minutes
network-timeout=600000

# Set fetch retries
fetch-retries=3

# Set fetch retry mintimeout
fetch-retry-mintimeout=20000

# Set fetch retry maxtimeout
fetch-retry-maxtimeout=120000

# Set maxsockets to handle more concurrent requests
maxsockets=5

# Set progress to false for CI
progress=false

# Disable package-lock
package-lock=false

# Set legacy peer deps to true to avoid peer dependency issues
legacy-peer-deps=true
